@model EmployerViewModel 

<div class="main-content">

    <div class="profile-page">

        <div class="profile active" id="profile-tab">
            <div class="row">
                <div class="col-md-3">
                    <div class="user-info-left">
                        <div class="contact">
                            
                            <ul class="list-inline social">
                                <li><a href="#" title="Facebook"><i class="fa fa-facebook-square"></i></a></li>
                                <li><a href="#" title="Twitter"><i class="fa fa-twitter-square"></i></a></li>
                                <li><a href="#" title="Google Plus"><i class="fa fa-google-plus-square"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-md-9">
                    <div class="user-info-right">
                        <a asp-action="Edit/@Model.Id" class="btn btn-primary btn-xs"> Edit</a>
                        
                        <div class="basic-info">
                            <h3><i class="fa fa-square"></i> Basic Information</h3>
                            <p class="data-row">
                                <span class="data-name">Username</span>
                                <span class="data-value">@Model.UserName</span>
                            </p>

                            <p class="data-row">
                                <span class="data-name">Name of the Company</span>
                                <span class="data-value">@Model.CompanyName</span>
                            </p>
                            <p class="data-row">
                                <span class="data-name">Address</span>
                                <span class="data-value">@Model.Address</span>
                            </p>
                        </div>

                        <div class="contact_info">
                            <h3><i class="fa fa-square"></i> Contact Information</h3>
                            <p class="data-row">
                                <span class="data-name">Email</span>
                                <span class="data-value">@Model.Email.</span>
                            </p>

                            <p class="data-row">
                                <span class="data-name">Phone</span>
                                <span class="data-value">@Model.Phone</span>
                            </p>
                            
                        </div>
                        <div class="about">
                            <h3><i class="fa fa-square"></i> About @Model.CompanyName</h3>
                            <p>@Model.CompanyDescription</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
